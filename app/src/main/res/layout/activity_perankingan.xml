<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context="com.singpaulee.mcdhore.PerankinganActivity">

	<TextView
		android:id="@+id/judul_activity"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_margin="10dp"
		android:text="Hasil Perankingan Dokumen"
		android:textSize="22sp"/>

	<Button
		android:id="@+id/btn_selesai"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:text="SELESAI"/>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_above="@id/btn_selesai"
		android:layout_below="@id/judul_activity"
		android:layout_margin="10dp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_margin="10dp"
					android:orientation="vertical">

					<TextView
						android:id="@+id/tv_nama1"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Dokumen 1"/>

					<TextView
						android:id="@+id/tv_dok1"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"/>
				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_margin="10dp"
					android:orientation="vertical">

					<TextView
						android:id="@+id/tv_nama2"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Dokumen 2"/>

					<TextView
						android:id="@+id/tv_dok2"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"/>
				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_margin="10dp"
					android:orientation="vertical">

					<TextView
						android:id="@+id/tv_nama3"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Dokumen 3"/>

					<TextView
						android:id="@+id/tv_dok3"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"/>
				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_margin="10dp"
					android:orientation="vertical">

					<TextView
						android:id="@+id/tv_nama4"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Dokumen 4"/>

					<TextView
						android:id="@+id/tv_dok4"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"/>
				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_margin="10dp"
					android:orientation="vertical">

					<TextView
						android:id="@+id/tv_nama5"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Dokumen 5"/>

					<TextView
						android:id="@+id/tv_dok5"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"/>
				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_margin="10dp"
					android:orientation="vertical">

					<TextView
						android:id="@+id/tv_nama6"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Dokumen 6"/>

					<TextView
						android:id="@+id/tv_dok6"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"/>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</RelativeLayout>
